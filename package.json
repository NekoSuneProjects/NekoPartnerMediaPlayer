{
  "name": "nekosmediaplayer",
  "version": "1.0.2",
  "main": "main.js",
  "build": {
    "appId": "com.nekosunevr.nekosmediaplayer",
    "productName": "NekosMediaPlayer",
    "copyright": "Copyright Â© 2025 NekoSuneVR",
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "license": "license.txt",
      "oneClick": false
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [],
    "win": {
      "icon": "icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "target": [
        "nsis",
        "msi"
      ]
    },
    "appx": {
      "backgroundColor": "#ffffff",
      "displayName": "NekosMediaPlayer",
      "publisher": "CN=NekoSuneVR",
      "publisherDisplayName": "NekoSuneVR",
      "identityName": "com.nekosunevr.nekosmediaplayer"
    },
    "linux": {
      "target": [
        "AppImage",
        "flatpak",
        "snap",
        "deb",
        "rpm",
        "tar.gz"
      ],
      "category": "AudioVideo",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "flatpak": {
      "synopsis": "Media Player for integrated experiences",
      "description": "NekosMediaPlayer is a modern multimedia player with VRChat and streaming integration.",
      "license": "MIT",
      "branch": "stable",
      "category": "AudioVideo",
      "runtime": "org.freedesktop.Platform",
      "runtimeVersion": "22.08",
      "sdk": "org.freedesktop.Sdk",
      "base": "io.github.electron",
      "baseVersion": "22.08",
      "finishArgs": [
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.music"
    }
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:linux-all": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "NekoSuneVR",
  "license": "MIT",
  "description": "A modern media player for Music and streaming environments.",
  "dependencies": {
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12"
  }
}