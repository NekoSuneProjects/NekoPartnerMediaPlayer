<!DOCTYPE html>
<html lang="en" class="bg-gray-900 text-white">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NekoSuneVR Media Player</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white font-sans">
  <header class="bg-gray-800 shadow p-4 sticky top-0 z-10">
    <div class="container mx-auto flex justify-between items-center">
      <h1 class="text-2xl font-bold">NekoSuneVR Media Player</h1>
      <nav class="space-x-4">
        <a href="/" class="hover:underline">Home</a>
        <a href="/mediaplayer" class="hover:underline">MediaPlayer</a>
        <a href="/admin/login" class="hover:underline">Admin</a>
      </nav>
    </div>
  </header>

  <main class="container mx-auto px-4 py-8">
    <section class="mb-12 text-center">
      <h2 class="text-3xl font-bold mb-4">Welcome to the NekoSuneVR MediaPlayer</h2>
      <p class="text-gray-400">Explore playlists and featured tracks from our artists and partners.</p>
    </section>

    <section class="space-y-12">
      <% playlists.forEach(function(playlist) { %>
        <div class="space-y-4">
          <h3 class="text-2xl font-bold"><%= playlist.name %></h3>
          <div class="flex space-x-4 overflow-x-auto pb-2">
            <% playlist.Songs.forEach(function(song) { %>
              <div class="flex-shrink-0 bg-gray-800 rounded-lg shadow-lg w-72">
                <img src="<%= song.cover %>" alt="Cover" class="w-full h-40 object-cover">
                <div class="p-4">
                  <h4 class="text-lg font-semibold"><%= song.title %></h4>
                  <p class="text-gray-400">by <%= song.Artist %></p>
                  <p class="text-sm text-gray-500 mt-2">Views: <%= song.views || 'N/A' %> | Likes: <%= song.likes || 'N/A' %></p>
                  <a href="https://www.youtube.com/watch?v=<%= song.youtubeid %>" target="_blank" class="inline-block mt-2 text-blue-400 hover:underline">Watch on YouTube</a>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      <% }); %>
    </section>
  </main>

  <footer class="bg-gray-800 mt-12 p-4 text-center text-sm text-gray-500">
    &copy; 2025 NekoSuneVR. All rights reserved.
  </footer>
</body>
</html>